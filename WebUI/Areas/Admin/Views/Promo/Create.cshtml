@model Entities.Promo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Gear</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype = "multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="PhotoUrl" class="control-label"></label>
                <input type = "file" asp-for="PhotoUrl" style = "padding: 20px; display: block;"  name = "Image"  />
              <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for = "Description" class="form-control" id="editor1"> </textarea>

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        

                <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input type ="hidden" id = "colorInput" asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>

                
                <div class = "colorList d-flex align-items-center">
                    <div class="box" id="tomato"></div>
                       <div class="box" id="royalblue"></div>
                          <div class="box" id="forestgreen"></div>
                             <div class="box" id="gold"></div>
                </div>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<style>
    .colorList {
    padding: 10px;
    border: 2px solid gray;
}

    .colorList .box {
        width: 40px;
        height: 40px;
        margin-left: 10px;
        transition: 0.3s ease-in-out;
    }

    .colorList #tomato {
        background-color: tomato;
    }

    .colorList #royalblue {
        background-color: royalblue;
    }

    .colorList #gold {
        background-color: gold;
    }

    .colorList #forestgreen {
        background-color: forestgreen;
    }



    .colorList .box.box-active {
        filter: grayscale(70%);
    }


</style>


<script>
    ClassicEditor
        .create( document.querySelector( '#editor1' ) )
          

</script>


@section MyScripts{
    <script>
        $(".colorList .box").on("click", function(){
             $(".colorList .box").removeClass("box-active")
            $(this).toggleClass("box-active")
            const value = $(this).attr("id")
            $("#colorInput").val(value)
        })

</script>
}